<svg
  viewBox="0 0 {{@board.rows.length}} {{@board.cols.length}}"
  class="board"
  ...attributes
>
{{#each @board.rows as |row y|}}
  {{#each row as |cell x|}}
    <rect
      x={{x}}
      y={{y}}
      class={{if cell.on "on" "off"}}
      width="0.95" height="0.95"
      {{on 'click' (fn this.toggle x y)}}
    />
  {{/each}}
{{/each}}
</svg>
